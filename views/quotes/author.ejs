<% layout('/layouts/boilerplate') %>

<style>
    h1 {
        color: #141214;
        text-align: center;
        margin: 3rem 0;
    }

    blockquote {
        text-align: center;
    }

    blockquote p {
        font-size: larger;
    }

    .blockquote-footer {
        color: #fcfcfcc3;
    }

    .card {
        color: #FCFCFC;
        background-color: #141214;
        box-shadow: 4px 2px 10px 2px rgba(0, 0, 0, 0.75);
        -webkit-box-shadow: 4px 2px 10px 2px rgba(0, 0, 0, 0.75);
        -moz-box-shadow: 4px 2px 10px 2px rgba(0, 0, 0, 0.75);
    }
</style>

<body>
    <h1 class="sedan-sc-regular">Quotes of <%= author %></h1>

    <% for(let quote of quotesOfAuthor) { %>
        <div class="card mt-3 mb-3">
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p class="lugrasimo-regular"><%= quote.q %></p>
                <footer class="blockquote-footer lugrasimo-regular"><%= quote.a %></footer>
              </blockquote>
            </div>
        </div>
    <% } %>
</body>