<% layout('/layouts/boilerplate') %>

<style>
    blockquote {
        text-align: center;
    }

    blockquote p {
        font-size: larger;
    }

    .blockquote-footer {
        color: #fcfcfcc3;
    }

    .card {
        color: #FCFCFC;
        background-color: #141214;
        box-shadow: 4px 2px 10px 2px rgba(0, 0, 0, 0.75);
        -webkit-box-shadow: 4px 2px 10px 2px rgba(0, 0, 0, 0.75);
        -moz-box-shadow: 4px 2px 10px 2px rgba(0, 0, 0, 0.75);
    }

    .search-input {
        width: 40%;
        border-radius: 25px;
        padding: 0.5rem 3rem;
    }

    .search {
        margin: 3rem 0;
    }

    .search form {
        display: flex;
        justify-content: center;
    }

    .search-button a {
        color: #FCFCFC;
        list-style: none;
        text-decoration: none;
        display: flex;
    }

    .search-button {
        background-color: #c52726;
        border-radius: 50px;
        position: relative;
        display: inline-block;
        overflow: hidden;
        cursor: pointer;
    }

    .search-button:hover .anim-layer {
        width: 100%;
        left: 0;
    }

    .search-button:hover a {
        color: #141214;
    }

    .search-button a {
        display: block;
        padding: 10px 20px;
        color: #FCFCFC;
        text-decoration: none;
        position: relative;
        z-index: 1;
    }

    .add50 {
        display: flex;
        justify-content: center;
    }

    @media only screen and (max-width: 770px) {
        .search-input {
            width: 60%;
            padding: 0.5rem 3rem;
        }
    }

    @media only screen and (max-width: 500px) and (min-width: 340px) {
        .search-input {
            width: 60%;
            padding: 0.5rem 1rem;
        }
    }

    @media only screen and (max-width: 340px) {
        .search-input {
            width: 50%;
            padding: 0.5rem 0.5rem;
            padding-right: 0;
        }
    }
</style>

<body>
    <div class="search">
        <form role="search">
            <input class="form-control me-2 search-input" id="searchInput" type="search" placeholder="Search by author name">
            <div class="search-button">
                <div class="anim-layer"></div>
                <a id="searchLink" href="#"><i class="fa-solid fa-magnifying-glass"></i> Search</a>
            </div>
        </form>
    </div>

    <% for(let quote of allQuotes) { %>
        <div class="card mt-3 mb-3">
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p class="lugrasimo-regular"><%= quote.q %></p>
                <footer class="blockquote-footer lugrasimo-regular"><%= quote.a %></footer>
              </blockquote>
            </div>
        </div>
    <% } %>

    <div class="add50 mt-4 mb-4">
        <div class="search-button">
            <div class="anim-layer"></div>
            <a href="/add50">Add 50 random quotes</a>
        </div>
    </div>
</body>

<script>
    const searchInput = document.getElementById('searchInput');
    const searchLink = document.getElementById('searchLink');

    const updateInputValue = () => {
        const inputValue = encodeURIComponent(searchInput.value.trim());
        searchLink.href = `/quotes/${inputValue}`;
    };

    searchInput.addEventListener('input', updateInputValue);

    updateInputValue();
</script>
